<div class="container">
  <div class="row my-3">
    <div class="col-md-3 bg-light text-center mb-2">
      <h5>マイページ</h5>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-2">
      <p><strong>登録情報</strong></p>
    </div>
    <div class="col-md-2">
      <%= link_to "編集する", edit_customer_path(current_customer.id), class: "btn btn-success px-2 mb-3" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-auto">
      <table class="table table-bordered">
        <tr>
          <th class="bg-light">氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="bg-light">カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="bg-light">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="bg-light">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="bg-light">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="bg-light">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row my-2">
    <div class="col-md-2">
      <p><strong>配送先</strong></p>
    </div>
    <div class="col-md-3">
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-info px-2" %>
    </div>
  </div>
  
  <div class="row my-2">
    <div class="col-md-2">
      <p><strong>注文履歴</strong></p>
    </div>
    <div class="col-md-3">
      <%= link_to "一覧を見る", orders_path, class: "btn btn-info px-2" %>
    </div>
  </div>
  
</div>