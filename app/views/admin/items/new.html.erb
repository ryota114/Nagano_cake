<div class="container">
  <div class="row">
    <div class="col-md-2 bg-light text-center my-4">
      <h5>商品新規登録</h5>
    </div>
  </div>
  
  <%= form_with model: [:admin,@item], local:true do |f| %>
  <div class="row">
    <table class="table table-borderless" style="table-layout:fixed;">
      <tbody>
        <tr><th style="width:200px;">商品画像</th><td><%= f.attachment_field :image %></td></tr>
        <tr><th>商品名</th><td><%= f.text_field :name, placeholder: "商品名", size: "30" %></td></tr>
        <tr><th>商品説明</th><td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", size: "30x8" %></td></tr>
        <!--f.collection_select プロパティ名, オブジェクトの配列, value属性の項目, テキストの項目 -->
        <tr><th>ジャンル</th><td><%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %></td></tr>
        <tr><th>税抜価格</th><td><%= f.text_field :price, placeholder: "1000" %>円</td></tr>
        <tr>
          <th>販売ステータス</th>
          <!--is_active初期値trueであれば販売中、退会の場合falseになるので販売停止中-->
          <td>
              <%= f.radio_button :is_active, "true" %>
              <%= f.label :is_active, "販売中", value: "true" %>
              <%= f.radio_button :is_active, "false" %>
              <%= f.label :is_active, "販売停止中", value: "false" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <div class="row">
    <div class="col-2 offset-3">
      <%= f.submit "新規登録", class: "btn btn-success px-4" %>
    </div>
  </div>
  <% end %>
  
</div>