<div class="container">
  
  <!--cardメソッドを用いて、画像の上に文字を-->
  <div class="row">
    <div class="col-md-6 offset-md-3 my-5 py-3">
      <div class="card" style="width: 28rem" >
        <img class="card-img" src="/assets/cakeshop.jpg" >
        <div class="card-body p-0">
          <p class="card-img-overlay text-white d-flex align-items-center">
            ようこそ、ながのCAKEへ！</br>
            このサイトは、ケーキ販売のECサイトになります。</br>
            会員でない方も商品の閲覧はできますが、</br>
            購入には会員登録が必要になります。</br>
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <h3><strong>新着商品</strong></h3>
  </div>
  
  <!--新着商品を並べて表示-->
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-md-3">
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, :fill, 150, 100, format: 'jpeg', fallback: "no_image.jpg", size: "150x100" %>
      <% end %>
      <p class="my-1"><strong><%= item.name %></strong></p>
      <p><strong>¥<%= (item.price * 1.1).floor.to_s(:delimited) %></strong></p>
    </div>
    <% end %>
  </div>
  
  <!--商品一覧へのリンク-->
  <div class="row">
    <div class="col-md-3 offset-md-9 mt-3">
      <%= link_to "全ての商品を見る>", items_path, class: "border-bottom border-info" %>
    </div>
  </div>
  
</div>