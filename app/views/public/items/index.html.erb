<div class="container">
  <div class="row my-3">
    <div class="col-md-3">
      <h3 style="display:inline"><strong>商品一覧</strong></h3>(全<%= @items.count %>件)
    </div>
  </div>
  
  <!--商品を４つ横並べ、計８つ表示、ページネイト-->
  <div class="row my-5">
    <% @items.each do |item| %>
      <div class="col-md-3 pr-1">
        <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 150, 100, format: 'jpeg', fallback: "no_image.jpg", size: "150x100" %>
        <% end %>
        <p class="my-1"><strong><%= item.name %></strong></p>
        <p><strong>¥<%= (item.price * 1.1).floor.to_s(:delimited) %></strong></p>
      </div>
    <% end %>
  </div>
  
  <!--ページネイト-->
  <div class="row">
    <div class="mx-auto">
      <%= paginate @items %>
    </div>
  </div>
  
</div>