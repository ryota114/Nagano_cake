<div class="container">
  <div class="row my-3">
    <div class="col-md-3 bg-light text-center mb-2">
      <h5>配送先編集</h5>
    </div>
  </div>
  
  <%= form_with model: @address, local:true do |f| %>
    <div class="row mt-3">
      <div class="col-md-3">
        <p>郵便番号(ハイフンなし)</p>
      </div>
      <div class="col-md-3">
        <%= f.text_field :postal_code %>
      </div>
    </div>
    
    <div class="row mt-1">
      <div class="col-md-3">
        <p>住所</p>
      </div>
      <div class="col-md-6">
        <%= f.text_field :address, size: "45" %>
      </div>
    </div>
    
    <div class="row mt-1">
      <div class="col-md-3">
        <p>宛名</p>
      </div>
      <div class="col-md-6">
        <%= f.text_field :name %>
      </div>
      <div class="col-md-3">
        <%= f.submit "変更内容を保存", class: "btn btn-success px-2" %>
      </div>
    </div>
  <% end %>
  
  
</div>