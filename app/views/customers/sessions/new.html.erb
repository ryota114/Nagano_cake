<div class="container">
  <% if flash[:error] %>
    <p class="text-red"><%= flash[:error] %></p>
  <% end %>

  <div class="row">
    <div class="col-md-2 bg-light text-center my-4">
      <h5>ログイン</h5>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4 bg-light text-center my-2">
      会員の方はこちらからログイン
    </div>
  </div>
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row my-2">
    <div class="col-md-3 offset-md-1">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="col-md-4">
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email", size: "40" %>
      </div>
    </div>
  </div>
  
  <div class="row my-2">
    <div class="col-md-3 offset-md-1">
      <%= f.label "パスワード" %>
    </div>
    <div class="col-md-4">
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", size: "40" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-info px-3" %>
      </div>
    </div>
  </div>
<% end %>

  <div class="row mt-4">
    <div class="col-md-4 bg-light text-center my-2">
      会員登録がお済みでない方
    </div>
  </div>
  
  <div class="row my-2">
    <div class="col-md-4 offset-md-2">
      <%= link_to "こちら", new_registration_path(resource_name), class: "border-bottom border-info" %>から新規登録を行ってください。
    </div>
  </div>

</div>