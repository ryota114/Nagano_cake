<div class="container">
  <div class="row">
    <div class="col-auto bg-light text-center mb-2">
      <h5><%= @customer.first_name + @customer.last_name %>さんの会員詳細</h5>
    </div>
  </div>
  
  <!--テーブルメソッドを使用して一覧の表示-->
  <div class="row">
    <table class="table table-borderless pr-5" style="table-layout:fixed;">
      <tbody>
        <tr><td style="width:200px;">会員ID</td><td><%= @customer.id %></td></tr>
        <tr><td>氏名</td><td><%= @customer.first_name + " " + @customer.last_name %></td></tr>
        <tr><td>フリガナ</td><td><%= @customer.first_name_kana + " " + @customer.last_name_kana %></td></tr>
        <tr><td>郵便番号</td><td><%= @customer.postal_code %></td></tr>
        <tr><td>住所</td><td><%= @customer.address %></td></tr>
        <tr><td>電話番号</td><td><%= @customer.telephone_number %></td></tr>
        <tr><td>メールアドレス</td><td><%= @customer.email %></td></tr>
        <tr>
          <td>会員ステータス</td>
          <!--is_deleted初期値falseであれば有効、退会の場合trueになるので無効-->
          <td>
            <% if @customer.is_deleted == false %>
              <div class="text-success">有効</div>
            <% else %>
              <div class="text-danger">無効</div></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    
    <!--link_toのボタン-->
    <div class="mx-auto">
      <%= link_to "編集する", edit_admin_customer_path(params[:id]), class: "btn btn-success mr-5" %>
      <%= link_to "注文履歴一覧を見る", admin_root_path(customer_id: @customer.id), class: "btn btn-primary" %>
    </div>
  </div>
  
  
</div>