<div class="container">
  <div class="row">
    <div class="col-auto bg-light text-center mb-2">
      <h5><%= @customer.first_name + @customer.last_name %>さんの会員情報編集</h5>
    </div>
  </div>
  
  <!--テーブルメソッドを使用して一覧の表示-->
  <div class="row">
    <!--form_withはtableの外に配置する。中に中途半端に置くと二回送信できない-->
    <%= form_with model:[:admin,@customer], local:true do |f| %>
      <table class="table table-borderless pr-5" style="table-layout:fixed;">
        <tbody>
          <tr>
            <th style="width:200px;">会員ID</th>
            <td style="width:40%;"><%= @customer.id %></td>
            <td style="width:40%;"></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :first_name, class: "form-control border-dark" %></td>
            <td><%= f.text_field :last_name, class: "form-control border-dark" %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= f.text_field :first_name_kana, class: "form-control border-dark" %></td>
            <td><%= f.text_field :last_name_kana, class: "form-control border-dark" %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code, class: "form-control border-dark" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, class: "form-control border-dark"%></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number, class: "form-control border-dark" %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, class: "form-control border-dark" %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <!--ラジオボタン　有効でfalse,退会でtrueを返す-->
            <td>
              <%= f.radio_button :is_deleted, "false" %>
              <%= f.label :is_deleted, "有効", value: "false" %>
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会", value: "true" %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "変更を保存", class: "btn btn-success px-3" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
  
</div>