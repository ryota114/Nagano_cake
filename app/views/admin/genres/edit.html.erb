<div class="container">
  <div class="row">
    <div class="col-auto bg-light text-center my-4">
      <h5>ジャンル編集</h5>
    </div>
  </div>
  
  <div class="row">
    <!--ジャンルの編集フォーム-->
    <%= form_with model:[:admin,@genre], local:true do |f| %>
      <%= f.label :name, "ジャンル名", style: "width:120px" %>
      <%= f.text_field :name, style: "width:200px",class: "mr-4"  %>
      <%= f.submit "変更を保存", class: "btn btn-success px-3" %>
    <% end %>
  </div>
  
</div>